
@{
    ViewData["Title"] = "Index";    
}

<style>
    .date {
        background: #FFC107;
        width: 65px !important;
        height: 40px !important;
        display: flex;
        align-content: center;
        justify-content: center;
        border-radius: 3px;
    }

    .inline {
        display: flex;
        flex-direction: row;
        align-content: flex-start;
        justify-content: flex-start;
    }

    .type {
        background: #2196F3;
        width: 105px !important;
        height: 30px !important;
        display: flex;
        align-content: center;
        justify-content: center;
        border-radius: 3px;
        margin-left: 10px;
        margin-right: 10px;
        margin-top: 10px;
    }
    .button-margin-top {
        margin-top: 1.5rem;
    }
</style>

<div class="contenido">

    <div class="mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-3">
            <button class="btn btn-info w-100 mb-3">Agenda</button>
            <div class="card-item">
                <h1 class="title-card"></h1>
                <div class="row">
                    <div class="inline">
                        <div class="date">
                            <span class="mt-2 fw-bold">21 Oct</span>
                        </div>

                        <div class="type">
                            <span class="fw-bold text-white">Académico</span>
                        </div>                                                
                    </div>
                    <p class="mt-2">Último día para retiro de materias y/o retiro total del ciclo carreras de la Dirección de Educación a Distancia</p>
                </div>
            </div>
            <div class="card-item">
                <h1 class="title-card"></h1>
                <div class="row">
                    <div class="inline">
                        <div class="date">
                            <span class="mt-2 fw-bold">31 Oct</span>
                        </div>

                        <div class="type">
                            <span class="fw-bold text-white">Académico</span>
                        </div>
                    </div>
                    <p class="mt-2">Inicia trámites de ingreso para nuevos aspirantes a carreras de la Dirección de Educación a Distancia para Ciclo 01-2025</p>
                </div>
            </div>
            <div class="card-item">
                <h1 class="title-card"></h1>
                <div class="row">
                    <div class="inline">
                        <div class="date">
                            <span class="mt-2 fw-bold">01 Nov</span>
                        </div>

                        <div class="type">
                            <span class="fw-bold text-white">Académico</span>
                        </div>
                    </div>
                    <p class="mt-2">Día de difuntos (asueto)</p>
                </div>
            </div>

            <button class="btn btn-info w-100 mb-3 button-margin-top">Noticias</button>

        </div>
        <div class="col-md-9">
            Espacio para lo demás
        </div>
    </div>
</div>

